<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/pausedbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="25"
                android:orientation="vertical"
                android:padding="2dp"
                android:weightSum="100">

                <androidx.appcompat.widget.AppCompatImageView

                    android:layout_width="263dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="0.3in"
                    android:layout_weight="15"
                    android:background="@drawable/quiz_paused"

                    >

                </androidx.appcompat.widget.AppCompatImageView>

                <TextView
                    android:id="@+id/resumeQuiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0.2in"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:text="RESUME QUIZ >"
                    android:textColor="#CD2C13"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif-light">

                </TextView>

                <TextView
                    android:id="@+id/new_light_quiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0.2in"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:clickable="true"
                    android:text="NEW LIGHT QUIZ >"
                    android:textColor="#CD2C13"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif-light">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="0.2in"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="EXIT QUIZ >"
                    android:textColor="#CD2C13"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:fontFamily="sans-serif-light">

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20px"
                android:layout_weight="20"
                android:orientation="vertical"
                android:padding="2dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="349dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/line_eleven"></androidx.appcompat.widget.AppCompatImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:orientation="horizontal"
                    android:paddingLeft="0.2in"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:layout_marginRight="0.1in"
                        android:background="@drawable/medium_volume_96px">

                    </androidx.appcompat.widget.AppCompatImageView>


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/sound_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:checked="false">

                    </androidx.appcompat.widget.SwitchCompat>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:layout_marginLeft="0.05in"
                        android:layout_marginRight="0.05in"
                        android:background="@drawable/line_12">

                    </androidx.appcompat.widget.AppCompatImageView>

                    <androidx.appcompat.widget.AppCompatImageView

                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_marginRight="0.05in"
                        android:background="@drawable/music">

                    </androidx.appcompat.widget.AppCompatImageView>

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/music_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="39dp"
                        android:checked="false">

                    </androidx.appcompat.widget.SwitchCompat>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>